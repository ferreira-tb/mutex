{
  "name": "@tb-dev/mutex",
  "version": "0.1.1",
  "description": "A naive mutex implementation for TypeScript",
  "license": "MIT",
  "type": "module",
  "private": false,
  "packageManager": "pnpm@8.15.4",
  "homepage": "https://tb.dev.br/mutex/",
  "author": {
    "name": "Andrew Ferreira",
    "email": "andrew.shien2@gmail.com",
    "url": "https://github.com/ferreira-tb"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ferreira-tb/mutex.git"
  },
  "bugs": {
    "url": "https://github.com/ferreira-tb/mutex/issues"
  },
  "keywords": [
    "mutex",
    "typescript"
  ],
  "lint-staged": {
    "*.{?(c|m)@(j|t)s,css,vue,md,json}": "prettier --write",
    "*.{?(c|m)@(j|t)s,vue}": "pnpm run lint"
  },
  "scripts": {
    "build": "vite build",
    "docs": "typedoc --plugin typedoc-plugin-mdn-links",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint . --config eslint.config.js --cache",
    "prepare": "husky",
    "release": "pnpm run build && pnpm publish",
    "test": "vitest --run",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@tb-dev/eslint-config": "^3.0.1",
    "@types/node": "^20.11.22",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.9",
    "typedoc-plugin-mdn-links": "^3.1.17",
    "typescript": "5.4.2",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}
